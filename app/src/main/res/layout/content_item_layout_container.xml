<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/content_content_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_view"/>

            <TextView
                android:id="@+id/content_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/content_content_image"
                android:layout_toLeftOf="@id/content_content_image"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:text="تیم برنامه نویسی انیاک موفق به طراحی و پیاده سازی سه استارتاپ موفق شدند"
                android:textSize="@dimen/main_page_text_view_sub_title_text_size"/>

            <LinearLayout
                android:id="@+id/content_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/content_content_image"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/content_divider"
                android:orientation="horizontal"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_divider"
                android:text="مشاهده ادامه مطلب"
                android:textColor="@color/main_page_text_view_sub_title_text_color"
                android:textSize="@dimen/main_page_text_view_sub_title_text_size"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>