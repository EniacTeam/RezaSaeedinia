<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_downloads"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/main_page_item_style"
    android:layout_margin="5sp">
    <ImageButton
        android:id="@+id/btn_downloads"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_downloads"
        android:text="دانلود"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/main_page_text_view_sub_title_text_size"
        android:textColor="@color/main_page_text_view_sub_title_text_color"/>

</RelativeLayout>